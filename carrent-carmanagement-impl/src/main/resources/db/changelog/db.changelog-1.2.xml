<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="20180531_create-preferences-table" author="Mikhail_Chen-Len-Son">
        <preConditions>
            <not>
                <tableExists tableName="preferences"/>
            </not>
        </preConditions>
        <createTable tableName="preferences">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)"/>
            <column name="value" type="VARCHAR(50)"/>
        </createTable>
        <addPrimaryKey columnNames="id" constraintName="preferences_id_pk"
                       tableName="preferences"/>
    </changeSet>

    <changeSet id="20180531_add-default-preferences" author="Mikhail_Chen-Len-Son">
        <preConditions>
            <tableExists tableName="preferences"/>
        </preConditions>
        <sql>
            INSERT INTO carmanagement.preferences (
                id, name, value
            ) VALUES (
                nextval('preferences_id_seq'), 'service-interval', '30'
            );
        </sql>
    </changeSet>

</databaseChangeLog>